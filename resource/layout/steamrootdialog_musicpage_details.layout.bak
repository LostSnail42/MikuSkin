"resource/layout/steamrootdialog_musicpage_details.layout"
{
	controls
	{
		AlbumList { tabposition=1 }
		ArtistList { tabposition=1 }
		DetailsBorder { controlname=EditablePanel style="DetailsBorderPanel" zpos="-1" }
		EmptyDatabaseText { controlname="RichText" text="#Music_NoLibrary" style="EmptyDatabaseText" }
		CrawlingText { controlname="RichText" style="CrawlingText" }
	}

	styles
	{
		AlbumOrArtistListStyle
		{
			render_bg { }
		}
		
		EmptyDatabaseText
		{
			textcolor="Text"
			font-size="15"
			render_bg {}
		}
		
		CrawlingText
		{
			textcolor="Text"
			font-size="15"
			render_bg {}
		}
		
		CMusicPage_Details
		{
			inset="0 0 0 1"
			render
						{
							// lines around, to fix a bug
							0="fill( x0 + 3, y0, x1 - 2, y0+1, ButtonBorderDisabled )"  // top

							//gradient to obscure content at top of scrolling region 
							//1="gradient( x0+2, y0 + 1, x1-1, y0 + 16, dialogbg, none  )"
							
							//gradient to obscure content at bottom of scrolling region 
							2="gradient( x0+2, y1 - 16, x1-1, y1-1, none, almostblack )"
							
							// single pixel fills in the corners
							5="fill( x0 + 2, y0 + 1, x0 + 3, y0 + 2, ButtonBorderDisabled )"
							6="fill( x1 - 2, y0 + 1, x1 - 1, y0 + 2, ButtonBorderDisabled )"
							7="fill( x0 + 2, y1 - 2, x0 + 3, y1 - 1, ButtonBorderDisabled )"
							8="fill( x1 - 2, y1 - 2, x1 - 1, y1 - 1, ButtonBorderDisabled )"

							//Picture
							9="image_scale(x0, y0, x1, y1, graphics/MainBackImage  )"
							9="image(x1-549, y1-582, x0, y0, graphics/Music  )"
							
						}
			render_bg
			{
				 0="gradient( x0+2, y0+2, x1-1, y1 - 1, dialogbg, almostblack )"
				 //1="gradient( x0 +2, y0+2, x1-1, y0 + 20, backgroundstartsubtle, none )"
			}
		}
		

		// Some overrides for our listpanel
		"MusicPage_Details ListPanel"
		{
			bgcolor="None"
			font-size=15
			render_bg {}
			render {}
			padding-left=4
			padding-right=2
		}

		
		"MusicPage_Details ListPanelInterior"
		{
			bgcolor="none"
			textcolor="text2"
			inset="1 1 0 0"
			render {}
			render_bg {} 
		}
		
		"MusicPage_Details ListPanelInterior:scrollbar"
			{     
			inset="1 1 -2 0"
			bgcolor=none
			
			render_bg {}
			}
		
		"MusicPage_Details ListPanelDragger"
		{
			bgcolor="none"
			render {}
			render_bg {}
		}

		"MusicPage_Details ListPanelColumnHeader" [!$OSX]
		{
			bgcolor="none"
			font-size=14
			inset="2 2 0 0"
			render {}
			render_bg 
			{
				0="gradient_horizontal( x0+1, y0+2, x1, y1 + 1, ButtonFace, none )"
			}

		}
		
		"MusicPage_Details ListPanelColumnHeader" [$OSX]
		{
			bgcolor="none"
			font-size=13
			inset="2 2 0 0"
			render {}
		}	

		"AlbumOrArtistListStyle ListPanelColumnSelectButton"   
		{
       		inset="-3 3 0 0"
        		render {
          		5="image( x0 + 3, y0 + 3, x1, y1, graphics/icon_collapse )"
        		}   
        		render_bg {
        			1="fill( x0 + 1, y0, x1 - 1, y1, none )"
        		}
		}
		
		DetailsBorderPanel
		{
			
			bgcolor = none
			render 
			{
				// background gradient

				// lines around
				1="fill( x0 + 2, y0-1, x1 - 2, y0, ButtonBorderDisabled )"  // top
				2="fill( x0 + 2, y1-3, x1 - 2, y1+2, ButtonBorderDisabled )"  // bottom
				3="fill( x0, y0 + 1, x0 + 1, y1 - 2, ButtonBorderDisabled )"  // left
				4="fill( x1 - 1, y0 + 1, x1, y1 - 2, ButtonBorderDisabled )"  // right
			}
		}	

	}

	layout
	{
		region	{ name="list" y=2 x=1 width=275 height=max margin-bottom=0 }
		region	{ name="details"
			y=1 x=275 width=max height=max overflow=scroll-vertical 
			margin-left=1 margin-top=1 margin-bottom=1 margin-right=-1 dir=down }
		
		place	{ control=EmptyDatabaseText x=0 y=0 width=max height=max margin=10 }
		place	{ control=CrawlingText x=0 y=0 width=max height=max margin=10 }
		
		place	{ control=DetailsBorder y=1 x=1 width=max height=max }

		place { control=AlbumList region=list width=275 height=max margin=0 }
		place { control=ArtistList region=list width=275 height=max margin=0 }
		place { control=*MusicPageDetailsAlbum region=details width=max dir=down spacing=10 }
	
		
	}

}

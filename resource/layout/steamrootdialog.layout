"resource/layout/steamrootdialog.layout"
{
	controls
	{
		"fullscreen"
		{
			"ControlName"		"Button"
			style="FullscreenButton"
			command="fullscreen"
			tooltiptext="#tooltip_view_fullscreen"
		}

		"startvr"
		{
			"ControlName"		"Button"
			style="VRButton"
			command="startvr"
			tooltiptext="#tooltip_view_vr_start"
		}

		"exitvr"
		{
			"ControlName"		"Button"
			style="VRButtonExit"
			command="exitvr"
			tooltiptext="#tooltip_view_vr_exit"
		}


		"ImageLogo"
		{
		"ControlName" 	"Label"


		style="ClientLogo"
		zpos=-5
		}
	
		
		"New"
		{
		"ControlName" 	"URLLabel"
		style="new_label"
		"URLText"		"http://store.steampowered.com/uiupdate"
		zpos=-2
		}
		
		"UINavigatorPanel"
		{
			"ControlName"		"CUINavigatorPanel"
			zpos=-2
		}
		
		"UIStatusPanel"
		{
			"ControlName"		"CUIStatusPanel"
			zpos=-2
		}
		
		"MenuBar"
		{
			"ControlName"		"MenuBar"
			style=RootMenu
		}
		
		SupportAlert
		{
			ControlName=Button
			labelText="#Steam_SupportAlert"
			style="support_alert"
			textAlignment=center
			command="OpenSupportAlertWindow"
		}
		
		InboxButton
		{
			ControlName=CInboxButton
			style="inbox_button"
			textAlignment=west
		}
		
		
		AnnouncementButton
		{
			ControlName=CAnnouncementButton
			style="announcement_button"
			textAlignment=west
		}

		AccountButton
		{
			ControlName=CAccountButton
			style="AccountButtonStyle"
		}

		
		add_game
		{
			"ControlName"		"MenuButton"
			labelText="#steam_client_add_game"
			style="AddGameButton"
		}
		
		frame_title
		{
			ControlName=Label
	
			style="ClientTitle"
			"textAlignment"   "west"
			"textAlignment"   "center" [$OSX]
		}
		
		account_url
		{
			"ControlName"		"MenuButton"
			"fieldName"		"account_url"
			"labelText"		"#Steam_Account_Name"
			style="AccountURLStyle"
		}
		
		account_balance_seperator
		{
			"ControlName"	"Label"
			"fieldName"		"account_balance_seperator"
			"labelText"		"|"
			style="online_friends"
		}
		
		account_balance
		{
			"ControlName"	"URLLabel"
			"fieldName"		"account_balance"
			"labelText"		""
			"URLText"		"steam://url/StoreAccount/"
			style="URLLabelSimple"
		}
		
		
		universe_label
		{
			ControlName=Label
			labelText=#Steam_Universe_Internal
		}

		view_friends
		{
			ControlName=Button
			labelText="#Steam_ViewFriends"
			command="ViewFriends"
			style="view_friends"
			textAlignment=east
		}
		online_friends
		{
			ControlName=Label
			labelText="#Steam_OnlineFriends"
			style="online_friends"
			textAlignment=east
			zpos=-1
		}
	}
	
	styles
	{
		
		ClientLogo
		{
			bgcolor=none
			render_bg={}
			image="graphics/piston"
			inset="0 -20 0 0"
		}

		MikuHead
		{
			bgcolor=none
			render_bg={}
			image="graphics/MikuHead"
			inset="0 0 0 0"
		}
		
		new_label
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button"
			inset="0 0 0 0"
		}
		
		new_label:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover"
			inset="0 0 0 0"
		}

		new_label_german
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_german"
			inset="0 0 0 0"
		}

		new_label_german:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_german"
			inset="0 0 0 0"
		}

		new_label_french
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_french"
			inset="0 0 0 0"
		}

		new_label_french:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_french"
			inset="0 0 0 0"
		}
		
		new_label_italian
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_italian"
			inset="0 0 0 0"
		}

		new_label_italian:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_italian"
			inset="0 0 0 0"
		}
		
		new_label_spanish
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_spanish"
			inset="0 0 0 0"
		}

		new_label_spanish:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_spanish"
			inset="0 0 0 0"
		}
		
		new_label_danish
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_danish"
			inset="0 0 0 0"
		}

		new_label_danish:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_danish"
			inset="0 0 0 0"
		}
		
		new_label_norwegian
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_norwegian"
			inset="0 0 0 0"
		}

		new_label_norwegian:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_norwegian"
			inset="0 0 0 0"
		}
		
		new_label_swedish
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_swedish"
			inset="0 0 0 0"
		}

		new_label_swedish:hover
		{
			bgcolor=none
			render_bg={}
			image="graphics/new_button_hover_swedish"
			inset="0 0 0 0"
		}
		
		RootMenu
		{
			bgcolor="none"
		}

		AddGameButton
		{
			font-size=14
			font-size=13 [$OSX]
			font-family=basefont
			textcolor="labelfocus"
			padding-right=30
			padding-left=17
			font-style=uppercase
			render_bg
			{
				0="image( x0 + 2, y0 + 7, x1, y1, graphics/icon_collapse )"
			}
		}
		
		AddGameButton:hover
		{
			textcolor="white"
			render_bg
			{
				0="image( x0 + 2, y0 + 7, x1, y1, graphics/icon_collapse_over )"
			}
		}
		


		CSteamRootDialog
		{
			bgcolor=none

			render_bg
			{
				// top area and graphic
				0="gradient( x0, y0, x1, y0+175, ClientBG, DialogBG )"
				2="image( x0, y0, x1, y0+175, graphics/clienttexture2)"

				3="fill( x0, y0+175, x0+20, y1-76, DialogBG )"
				4="fill( x1-20, y0+175, x1, y1-76, DialogBG )"

				// fill in the bottom area
				5="fill( x0, y1 - 76, x1, y1, DialogBG )"
				6="image (x0+70, y0+0, x1, y1, graphics/MikuHead )"
			}
		}

	
		ClientTitle [!$OSX]
		{
			textcolor=none
		}

		ClientTitle [$OSX]
		{
			font-family=basefont
			font-size=15
      		font-weight=400
      		textcolor="textdisabled"
      		bgcolor="none"
      		inset="0 6 0 0"
		}

		ClientTitle:FrameFocus [$OSX]
		{
			font-family=basefont
   			font-size=15
   			font-weight=400
   			textcolor="texthover"
   			bgcolor="none"
   			inset="0 6 0 0"
		}

		FrameTitle
		{
			font-family=basefont
			font-size=15
			font-weight=400
			textcolor="Label"
			bgcolor="none"
			render_bg
			{
				1="gradient( x0, y0 - 4, x1, y1 + 18, TitleBar, none )"
				1="gradient( x0, y0, x1, y1 + 18, TitleBar, none )" [$OSX]
			}
		}
				
		FrameTitle:framefocus
		{
			font-family=basefont
			font-size=15
			font-weight=400
			textcolor="Label"
			bgcolor="none"
			textcolor="Text"
		
			render_bg
			{
				1="gradient( x0, y0 - 4, x1, y1 + 18, titlebarfocus, none )"
				1="gradient( x0, y0, x1, y1 + 18, titlebarfocus, none )" [$OSX]
			}
		}
		
		view_friends [!$OSX]
		{
			textcolor="LabelFocus"
			bgcolor="none"
			font-family=basefont
			font-size=14
			font-weight=400
			font-style=regular,uppercase
			padding-top=0
			padding-right=28
			
			render_bg
			{
				1="image( x0+48, y0, x1, y1, graphics/glow_friendslist )"
				2="image( x1-30, y0+20, x1, y1, graphics/icon_friendslist )"
			}
		}

		view_friends [$OSX]
		{
			textcolor="LabelFocus"
			bgcolor="none"
			font-family=basefont
			font-size=13
			font-weight=400
			font-style=regular,uppercase
			padding-top=6
			padding-left=24
			padding-bottom=30

		}

		view_friends:Hover
		{
			 textcolor="white"
		}


		view_friends:disabled
		{
			textcolor="TextDisabled"
		}


		online_friends [!$OSX]
		{
			textcolor="label2"
			bgcolor="none"
			font-family=basefont
			font-size=14
			font-style=regular
		}

		online_friends [$OSX]
		{
			textcolor="label2"
			bgcolor="none"
			font-family=basefont
			font-size=13
			font-style=regular
		}
		
		support_alert
		{
			font-family=basefont
			font-size=14
			font-weight=1000
			font-style=none
			textcolor=white
			padding-left=50
			padding-right=50
			padding-top=6
			inset="-8 -3 8 0"
			render {}
			render_bg {
				0="fill( x0, y0, x1, y1+1, support_flag_red )"
				1="image( x0, y0, x0, y1, graphics/support_flag_left )"
				2="image( x1, y0, x1, y1, graphics/support_flag_right )"
				3="image_scale( x0+3, y0, x1, y0+3, graphics/support_flag_top )"
				4="image_scale( x0+3, y1, x1, y1+3, graphics/support_flag_bottom )"
			}
		}
		
		support_alert:hover
		{
			font-family=basefont
			font-size=14
			font-weight=1000
			font-style=none
			textcolor=white
			padding-left=50
			padding-right=50
			padding-top=6
			inset="-8 -3 8 0"
			render {}
			render_bg {
				0="gradient( x0, y0, x1, y1+1, support_hover_red1, support_hover_red2 )"
				1="image( x0, y0, x0, y1, graphics/support_flag_left_hover )"
				2="image( x1, y0, x1, y1, graphics/support_flag_right_hover )"
				3="image_scale( x0+3, y0, x1, y0+3, graphics/support_flag_top_hover )"
				4="image_scale( x0+3, y1, x1, y1+3, graphics/support_flag_bottom_hover )"
			}
		}
		
		inbox_button
		{
			font-family=basefont
			font-size=14
			font-weight=1000
			font-style=none
			textcolor=white
			
			padding-left=1
			padding-right=16
			padding-top=2
			
			inset="-8 -3 8 0"
			render {}
			render_bg {
				0="fill( x0, y0, x1, y1+1, dark_blue )"
				1="image( x1-24, y0+4, x1-2, y1+2, graphics/inbox_notification_inactive )"
			}
		}

		inbox_button:hover
		{
			render_bg {
				0="gradient( x0, y0, x1, y1, inbox_inactive_hover1, inbox_inactive_hover2  )"
				1="image( x1-24, y0+4, x1, y1, graphics/inbox_notification_inactive )"
			}
		}

		inbox_button:selected
		{
			render_bg {
				0="gradient( x0, y0, x1, y1, inbox_inactive_hover1, inbox_inactive_hover2  )"
				1="image( x1-24, y0+4, x1-2, y1+2, graphics/inbox_notification_inactive )"
			}
		}
		
		inbox_button:disabled
		{
			textcolor=labeldisabled
			render_bg
			{
				// background fill
				1="image( x1-24, y0+4, x1-2, y1+2, graphics/inbox_notification_inactive_disabled )"
			}
		}

		inbox_button_active
		{
			inset="0 -3 8 0"
			render_bg {
				0="fill( x0, y0, x1, y1, inbox_active )"
				1="image( x1-20, y0+4, x1-2, y1+2, graphics/inbox_notification )"
			}
		}

		inbox_button_active:hover
		{
			inset="0 -3 8 0"
			render_bg {
				0="gradient( x0, y0, x1, y1, inbox_active_hover1, inbox_active_hover2  )"
				1="image( x1-20, y0+6, x1, y1, graphics/inbox_notification )"
			}
		}
		inbox_button_active:selected
		{
			inset="0 -3 8 0"
			render_bg {
				0="gradient( x0, y0, x1, y1, inbox_active_hover1, inbox_active_hover2  )"
				1="image( x1-20, y0+6, x1, y1, graphics/inbox_notification )"
			}
		}
		
		
		inbox_button_active:disabled
		{
			render {}
			render_bg
			{
				// background fill
				1="image( x1-21, y0+4, x1-2, y1+2, graphics/inbox_notification_disabled )"
			}
		}

		announcement_button
		{
			render_bg
			{
				// background fill
				0="fill( x0, y0, x1, y1, dark_blue )"
				1="image( x1-24, y0+4, x1-2, y1+1, graphics/updatenone_notification )"
			}
		}


		announcement_button:hover
		{
			render_bg
			{
				// background fill
				0="fill( x0, y0, x1, y1, darkblue )"
				1="image( x1-24, y0+4, x1-2, y1+1, graphics/updatenone_notification )"
			}
		}

		announcement_button_active
		{
			render_bg
			{
				// background fill
				0="fill(  x0, y0, x1, y1, AnnouncementBlue )"
				1="image( x1-24, y0+4, x1-2, y1+1, graphics/updatenew_notification )"
			}
		}
		
		FullscreenButton [!$OSX]
		{
			padding-left=0
			padding-top=0
			padding-right=0
			padding-bottom=0
		}

		FullscreenButton [$OSX]
		{
			padding-left=0
			padding-top=3
			padding-right=0
			padding-bottom=0
		}
		inboxmenuitem
		{
			textcolor=inbox_inactive_text
		}
		
		inboxmenuitem_active
		{
			textcolor=inbox_active_text
		}
		
		AccountURLStyle
		{
		  padding-top=-4
		}
		
		AccountURLStyle:hover
		{
			textcolor=white
		}
		
		AccountURLStyle:selected
		{
			textcolor=white
		}
	}
	
	colors
	{
		support_flag_red "169 72 71 255"
		
		support_hover_red1 "193 94 93 255"
		support_hover_red2 "156 64 63 255"
		
		inbox_active_text "112 186 36 255"
		inbox_inactive_text "191 191 191 255"

		inbox_active "92 126 16 255"
		inbox_active_hover1 "129 176 25 255"
		inbox_active_hover2 "104 142 19 255"

		inbox_inactive "38 38 37 255"
		inbox_inactive_hover1 "92 89 86 255"
		inbox_inactive_hover2 "77 75 72 255"

	}
	
	layout
	{
		place [!$OSX] { control="New" width=0 height=0 y=0 width=max align=right margin-right=56}
		place [$OSX]  { control="New" width=0 height=0 y=0 width=max align=right margin-right=-20}
		
		place { control="UINavigatorPanel" width=max height=max margin-right=1 margin-left=1 margin-bottom=40 margin-top=22 }
		
		place { control="UIStatusPanel" width=max height=40 align=bottom  margin-bottom=18 }
		
		place [!$OSX] { control="MenuBar" align=top margin-top=2 margin-left=2 }
			
		place [!$OSX] { control="account_balance, account_balance_seperator, account_URL, universe_label, fullscreen" align=right margin-top=12 margin-right=78 spacing=7 }
		place [$OSX]  { control="account_balance, account_balance_seperator, account_URL, universe_label, fullscreen" align=right margin-top=12 margin-right=15 spacing=7 }
	
		place [!$OSX] { control="fullscreen" tooltiptext="#tooltip_view_fullscreen" align=right y=7 height=20 spacing=0 margin-right=78 margin-top=1 width=30 region="bigpicture"}
		place [$OSX] { control="fullscreen" tooltiptext="#tooltip_view_fullscreen" align=right y=7 height=20 spacing=0 margin-right=8 margin-top=1 width=30 region="bigpicture"}
	
		
		place { control="InboxButton" align=right end-right="account_balance" margin-top=1 margin-right=20 height=26 }
		place { control="SupportAlert" align=right end-right="InboxButton" margin-top=1 margin-right=10 height=26 }

		place [!$OSX]  { control="frame_minimize,frame_maximize,frame_close" align=right margin-top=7 margin-right=6 spacing=-5 }

		region { name=bottom align=bottom width=max height=75 }
		place [!$OSX] { control="frame_minimize,frame_maximize,frame_close" align=right margin-top=13 margin-right=9 spacing=-5 }
		place [$OSX]  { control="frame_close,frame_minimize,frame_maximize" align=left margin-top=13 margin-left=11 spacing=-7 }

		place [!$OSX] { control="fullscreen" align=right end-right="frame_minimize" height=20 width=30 margin-right=8 margin-top=11 }
		place [$OSX]  { control="fullscreen" align=right height=20 width=30 margin-right=16 margin-top=11 }

		
		place { control="startvr, exitvr" align=right end-right="fullscreen" margin-right=4 margin-top=10 }

		place { control="AccountButton" align=right end-right="startvr" margin-top=9 margin-right=8 height=24 }
		place { control="InboxButton" align=right end-right="AccountButton" margin-top=9 margin-right=8 height=24 }
		place { control="AnnouncementButton" align=right end-right="InboxButton" margin-top=9 margin-right=8 height=24 width=34 }
		place { control="ParentalLockButton" align=right end-right="AnnouncementButton" margin-top=9 margin-right=8 height=24 width=44 }
		place { control="universe_label, XPVistaAlert, SupportAlert" spacing=8 align=right end-right="ParentalLockButton" margin-top=9 margin-right=8 height=24 }

		
		
		place [!$OSX] { control="ImageLogo" align=right x=650 y=0 width=340 height=133 margin-top=0 margin-right=0}
		place [$OSX] { control="ImageLogo" align=right x=650 y=0 width=340 height=133 margin-top=0 margin-right=0}
		
		place { control="add_game" x=14 y=16 region=bottom height=30}

		place { control="FriendPanel" height=48 width=48 region=bottom align=right margin-right=2 margin-top=16 }
		place { control="view_friends" height=62 y=12 region=bottom align=right dir=right margin-right=56 }
		place { control="online_friends" height=12 y=38 region=bottom align=right dir=right margin-right=56 }
	
 		// the title bar is missing, so increase the size of the grip
		place { control="frame_captiongrip" margin=2 width=max height=104 }
	}
}
